<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <ImageView
        android:id="@+id/rs2_step_header_image_view"
        style="@style/Widget.ResearchStack.StepHeader.InfoButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:padding="0dp"
        app:layout_constraintDimensionRatio="H,3126:3680"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/f_walking1" />

    <TextView
        android:id="@+id/rs2_step_header_title_label"
        style="@style/Widget.ResearchStack.StepHeader.TitleLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="First, walk for 30 seconds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rs2_step_header_image_view" />

    <TextView
        android:id="@+id/rs2_step_header_progress_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/lato"
        android:text="STEP 1 OF 6"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rs2_step_header_progress_bar"
        app:layout_constraintEnd_toStartOf="@+id/rs2_step_header_image_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rs2_step_header_image_view" />

    <ProgressBar
        android:id="@+id/rs2_step_header_progress_bar"
        style="@style/Widget.ResearchStack.StepHeader.ProgressBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/progressBarHeight"
        android:max="6"
        android:progress="2"
        app:layout_constraintBottom_toBottomOf="@+id/rs2_step_header_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <org.sagebionetworks.research.mobile_ui.widget.ActionButton
        android:id="@+id/rs2_step_header_cancel_button"
        style="@style/Widget.ResearchStack.StepHeader.CancelButton"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rs2_step_header_text_label"
        style="@style/Widget.ResearchStack.StepHeader.TextLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="You will be walking continuously at your normal pace for 30 seconds. Try to walk in a straight path. If you need to turn around then turn around as if you are walking around a cone. "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rs2_step_header_title_label" />

    <org.sagebionetworks.research.mobile_ui.widget.ActionButton
        android:id="@+id/rs2_step_header_info_button"
        style="@style/Widget.ResearchStack.StepHeader.InfoButton"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>