<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bp_submit_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical">


    <Button
        android:id="@+id/bp_submit_bar_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/navigation_action_backward"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/bp_submit_bar_next"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bp_submit_bar_skip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp" />

    <Button
        android:id="@+id/bp_submit_bar_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/navigation_action_forward"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/bp_submit_bar_back"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bp_submit_bar_skip"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />


    <Button
        android:id="@+id/bp_submit_bar_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navigation_action_skip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>